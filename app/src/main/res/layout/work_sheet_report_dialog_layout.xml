<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.gc.materialdesign.views.MaterialSpinner
        android:id="@+id/assign_to_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_hint="Assign To" />

    <com.gc.materialdesign.views.MaterialSpinner
        android:id="@+id/admin_status_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:ms_hint="Admin Status" />

    <com.gc.materialdesign.views.MaterialSpinner
        android:id="@+id/employee_status_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:ms_hint="Employee Status" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_login"
        android:text="Submit"
        android:textColor="@android:color/white" />

</LinearLayout>